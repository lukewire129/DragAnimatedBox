<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SlideScrollBox.Controls"
    xmlns:ctrls="clr-namespace:SlidScrollBox">
    <Style TargetType="{x:Type ctrls:SlideScrollBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrls:SlideScrollBox}">
                    <ItemsPresenter />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <controls:DragAnimatedPanel
                        ItemSeparation="2"
                        ItemsHeight="300"
                        ItemsWidth="220"
                        SwapCommand="{Binding SwapCommand}" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
